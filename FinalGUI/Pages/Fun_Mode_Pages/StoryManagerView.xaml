			<Button x:Name="btnPlay" Content="Play" Margin="843.791,0,0,160.5" Style="{DynamicResource btnModify}" FontSize="16" Foreground="White" Height="64" VerticalAlignment="Bottom" Width="120" HorizontalAlignment="Left" d:LayoutOverrides="Width" Click="btnPlay_Click" />
