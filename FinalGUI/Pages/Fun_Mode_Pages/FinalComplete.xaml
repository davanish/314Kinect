				</Setter.Value>
			</Setter>
		</Style>
	</UserControl.Resources>

	<Viewbox x:Name="LayoutRoot" Stretch="Fill" VerticalAlignment="Top" d:LayoutOverrides="Height">
		<Canvas Height="800" Width="1280">
			<Rectangle Stroke="#FF353434" Fill="#992D2D2D" Height="531.5" Canvas.Left="271" Canvas.Top="99.5" Width="756"/>
			<Ellipse x:Name="cirImage" Stroke="Black" RenderTransformOrigin="0.809,0.558" Fill="{x:Null}" Height="300" Canvas.Left="484" Canvas.Top="197" Width="300"/>
			<Label x:Name="lblTitle" Content="CONGRATULATIONS!" Height="56" FontSize="32" Foreground="White" Canvas.Left="484" Canvas.Top="137" Width="388.051"/>
			<Label x:Name="lblTitle_Copy" Content="       Story Completed" Height="56" FontSize="32" Foreground="White" Canvas.Left="451" Canvas.Top="519.5" Width="388.051"/>
			<Button x:Name="btnMainMenu" Content="Main Menu" Height="80" Style="{DynamicResource ButtonPerformBack}" Width="184.3" FontSize="16" Foreground="White" Click="btnMainMenu_Click" Canvas.Left="447" Canvas.Top="671.5" MouseLeave="Button_MouseLeave" MouseEnter="btnMainMenu_MouseEnter" />
			<Button x:Name="btnNextStory" Content="Next Story" Style="{DynamicResource btnDelete}" FontSize="16" Foreground="White" Height="80" Click="btnNextStory_Click" Width="184.3" Canvas.Left="673.7" Canvas.Top="671.5" MouseLeave="Button_MouseLeave" MouseEnter="btnNextStory_MouseEnter" />
			<local:HandController x:Name="hand"/>
		</Canvas>
	</Viewbox>
</UserControl>
