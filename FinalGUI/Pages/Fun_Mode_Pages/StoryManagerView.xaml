			<Rectangle Fill="#992D2D2D" Margin="286.5,119.5,302.409,151.5" Stroke="#FF353434"/>
			<Label x:Name="lblSubHeader" Content="Stories" Height="46.5" Margin="301.905,127,0,0" VerticalAlignment="Top" FontSize="18.667" Foreground="White" HorizontalAlignment="Left" Width="291.8"/>
			<ListBox x:Name="listBoxStories" Margin="301.905,173.5,316.209,237.5"/>
			<Label x:Name="lblTitle" Content="Fun Mode" Height="56" Margin="49.749,40,0,0" VerticalAlignment="Top" FontSize="32" Foreground="White" HorizontalAlignment="Left" Width="388.051"/>
